{
    "$schema": "http://json.schemastore.org/template",
    "author": "Kursad Koc",
    "classifications": [
        "Web",
        "Solution"
    ],
    "identity": "com.companyname.projecttemplate",
    "name": "kurkoc template",
    "shortName": "kurkoctemplate",
    "sourceName": "TemplateSolution",
    "preferNameDirectory": true,
    "symbols": {
        "EnableSwagger": {
            "type": "parameter",
            "datatype": "bool",
            "description": "enables swagger support",
            "defaultValue": "false"
        },
        "DBProvider": {
            "type": "parameter",
            "choices": [
                {
                    "choice": "SqlServer",
                    "description": "Sql Server"
                },
                {
                    "choice": "Postgresql",
                    "description": "Postgresql"
                }
            ],
            "datatype": "choice",
            "defaultValue": "SqlServer",
            "description": "The database settings"
        },
        "UseSqlServer": {
            "type": "computed",
            "value": "(DBProvider == \"SqlServer\")"
        },
        "UsePostgresql": {
            "type": "computed",
            "value": "(DBProvider == \"Postgresql\")"
        }
    },
    "sources": [
        {
            "modifiers": [
                {
                    "condition": "(!EnableSwagger)",
                    "exclude": ["src/**/OpenApi/**/*"]
                }
            ]
        }
    ],
    "tags": {
        "language": "C#",
        "type": "solution"
    }
}