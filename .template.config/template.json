{
    "$schema": "http://json.schemastore.org/template",
    "author": "Kursad Koc",
    "classifications": [
        "Web",
        "Solution"
    ],
    "identity": "com.companyname.projecttemplate",
    "name": "kurkoc template",
    "shortName": "kurkoctemplate",
    "sourceName": "Sample",
	"preferNameDirectory": true,
    "symbols": {
        "Framework": {
            "choices": [
                {
                    "choice": "net5",
                    "description": "Target .net 5"
                },
				                {
                    "choice": "net6",
                    "description": "Target .net 6"
                },
				                {
                    "choice": "net7",
                    "description": "Target .net 7"
                },
				                {
                    "choice": "net8",
                    "description": "Target .net 8"
                }
            ],
            "datatype": "choice",
            "defaultValue": "net8",
            "description": "The target framework for the project.",
            "replaces": "{TargetFramework}",
            "type": "parameter"
        },
        "EnableSwagger": {
			"type": "parameter",
            "datatype": "bool",
            "description": "enables swagger support",
			"defaultValue": "false"
        },
		"EFDatabase": {
			"type": "parameter",
            "choices": [
                {
                    "choice": "Sql Server",
                    "description": "Sql Server"
                },
				                {
                    "choice": "Postgresql",
                    "description": "Postgresql"
                },
				                {
                    "choice": "Sqlite",
                    "description": "Sqlite"
                }
            ],
            "datatype": "choice",
            "defaultValue": "Sql Server",
            "description": "The database settings"
        }
    },
    "tags": {
        "language": "C#",
        "type": "solution"
    }
}